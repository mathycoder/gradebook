<div class="paper-form paper-form-students">
  <h1>Add Students to Class <%= @klass.name %></h1>
  <div class="student-list-container">
    <div class="students-in-school">
      <h3>Students in the school</h3>

      <%= form_tag(klass_students_path(@klass), method: "get") do %>
          <%= text_field_tag('query', nil, placeholder: "Filter by name or class") %>
          <%= submit_tag("Filter") %>
          <%= submit_tag('clear') %>
        <% end %><br>

      <table>
        <tr>
          <th></th>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Grade</th>
          <th>Class</th>
        </tr>
        <% @students.each do |student| %>
          <tr>
            <td>
              <%= form_for([@klass, student]) do |f| %>
                <%= f.submit("Add") %>
              <% end %>
            </td>
            <td><%= student.last_name %></td>
            <td><%= student.first_name %></td>
            <td><%= student.grade %></td>
            <td><%= student.klass %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="students-in-class">
      <h3>Students in this class</h3>
      <table>
        <tr>
          <th></th>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Grade</th>
          <th>Class</th>
        </tr>
        <% @mystudents.each do |student| %>
          <tr>
            <td>
              <%= form_for([@klass, student]) do |f| %>
                <%= f.submit("Remove") %>
              <% end %>
            </td>
            <td><%= student.last_name %></td>
            <td><%= student.first_name %></td>
            <td><%= student.grade %></td>
            <td><%= student.klass %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
