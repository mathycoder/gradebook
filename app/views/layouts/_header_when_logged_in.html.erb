<% if klass && !klass.new_record? %>
  <%= logo_button(klass, klass_path(klass)) %>
  <%= new_resource_button(klass, new_klass_assignment_path(klass), "+A") %>
  <%= new_resource_button(klass, new_klass_learning_target_path(klass), "+LT") %>
  <%= new_resource_button(klass, klass_students_path(klass), "+S") %>
  <%= klass_dropdown(klass) %>
  <%= lt_dropdown(klass, lt) %>
  <%= student_dropdown(klass, student) %>
  <%= logout_link() %>
<% else %>
  <%= logo_button(nil, klasses_path()) %>
  <%= mygradebook() %>
  <%= logout_link() %>
<% end %>
