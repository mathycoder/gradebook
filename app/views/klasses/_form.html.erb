<%= content_tag(:div, class: "paper-form") do %>
  <%= content_tag(:h1, header) %>
  <%= form_for(klass) do |f| %>
    <%= error_display(klass) %>

    <%= content_tag(:div) do %>
      <%= f.label(:name, "Class Name") %><br>
      <%= f.text_field(:name, {maxlength: "20", class: "text-field"}) %><br><br>
    <% end %>

    <%= content_tag(:div) do %>
      <%= f.label(:subject, "Subject") %><br>
      <%= f.text_field(:subject, {maxlength: "20", class: "text-field"}) %><br><br>
    <% end %>

    <%= content_tag(:div) do %>
      <%= f.label(:grade, "Enter the grade") %><br>
      <%= f.text_field(:grade, {maxlength: "10", class: "text-field"}) %><br><br>
    <% end %>

    <%= content_tag(:div) do %>
      <%= f.label(:period, "Enter the class period") %><br>
      <%= f.text_field(:period, {maxlength: "2", class: "text-field"}) %><br><br>
    <% end %>

    <%= content_tag(:div, class: "big-button") do %>
      <%= f.submit(submit_text) %>
      <%= tag(:br) + tag(:br) %>
    <% end %>
  <% end %>

  <%= klass_delete_button(klass) %>

<% end %>
