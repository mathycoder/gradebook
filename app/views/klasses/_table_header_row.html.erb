<tr>
  <th rowspan="2"><%= render partial: "klasses/klass_title", locals: {klass: klass} %></th>
  <th></th>
  <% collection.each do |target| %>
    <th colspan="<%= target.assignments.length %>" class="<%= klass.my_color_class(target) %> start-of-lt">
      <div class="lt-target-label-container">
        <%= link_to(klass_learning_target_path(klass, target)) do %>
          <%= learning_target_text(target) %>
        <% end %>
        <div class="assignment-label">
          Assignments
        </div>
      </div>
    </th>
  <% end %>
</tr>
