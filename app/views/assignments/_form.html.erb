<%= content_tag(:div, class: ["paper-form", "assignment"]) do %>
  <%= form_for([klass,assignment]) do |f| %>
    <%= assignment_form_title(klass, add_or_edit) %>
    <%= error_display(assignment) %>

    <%= content_tag(:div) do %>
      <%= f.label(:name, "Name of assignment") + tag(:br) %>
      <%= f.text_field(:name, {class: "text-field", maxlength: "40"}) + tag(:br) + tag(:br) %>
    <% end %>

    <%= content_tag(:div) do %>
      <%= f.label(:date, "Date of Assignment") + tag(:br) %>
      <%= f.date_field(:date) + tag(:br) + tag(:br) %>
    <% end %>

    <%= content_tag(:div) do %>
      <%= f.collection_select :learning_target_id, klass.learning_targets, :id, :name, {include_blank: 'Select the Learning Target'}, {class: "select-css"} %><br><br>
    <% end %>

    <%= content_tag(:div, class: "assignment-form-table") do %>
      <%= content_tag(:table) do  %>
        <% klass.students.each do |student| %>
          <%= content_tag(:tr) do %>
            <%= f.fields_for(:grades, student.current_grade(assignment), include_id: false) do |br| %>
              <%= content_tag(:div) do %>
                <%= content_tag(:td, br.label(:score, student.full_name)) %>
                <%= content_tag(:td, br.label(:score, br.text_field(:score, {class: "text-field-grade", maxlength: "3"}))) %>
                <%= br.hidden_field(:student_id, :value => student.id) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= content_tag(:div, class: "big-button") do %>
      <%= tag(:br) + f.submit %>
    <% end %>
  <% end %>

  <%= assignment_delete_button(klass, assignment) %>

<% end %>
