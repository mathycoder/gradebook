<h1>
  <%= @lt.name %> for class <%= link_to(@klass.name, klass_path(@klass)) %>
</h1>
<p>
  <%= link_to("Edit Learning Target", edit_klass_learning_target_path(@klass, @lt)) %>
</p>


<div class="lt-show-container">

  <div class="lt-stats">
    <div class="lt-graph">
      <%= line_chart(@lt.graph_data, height: "300px", xtitle: "Date",
                     ytitle: "Avg Score", messages: {empty: "No data"},
                     colors: ["#b00", "#666"], max: 4,
                     library: { scales: { yAxes: [{ gridLines: { display: true },ticks: { maxTicksLimit: 5 } }]}}) %>
    </div>

    <div class="averages">
      <div>LT Average: </div>
      <div><%= @lt.class_average %></div>
      <div>Level 3s and up: </div>
      <div><%= @lt.percent_of_students_on_level(@klass, 3.0)%></div>
      <div>Level 2s: </div>
      <div><%= @lt.percent_of_students_on_level(@klass, 2.0)%></div>
      <div>Level 1s: </div>
      <div><%= @lt.percent_of_students_on_level(@klass, 1.0)%></div>
    </div>

    <div>
    </div>

  </div>


  <div class="lt-show-gradebook">
    <%= render partial: "klasses/table", locals: {klass: @klass, collection: [@lt], klass_or_lt: @lt} %>
  </div>

  <div class="lt-show-rubric">
    <%= render partial: "learning_targets/rubric", locals: {klass: @klass, lt: @lt} %>
  </div>

</div>
