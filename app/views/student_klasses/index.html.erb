<div class="open-book">
  <div class="open-book-title">
    <h1><%= current_student_user.first_last_name %>'s classes</h1>
  </div>
  <div class="open-book-table-students">
    <table>
      <tr>
        <th>Class</th>
        <th>Subject</th>
        <th>Teacher</th>
        <th>Grade</th>
      </tr>
      <% current_student_user.klasses.each do |klass| %>
        <tr>
          <td><%= klass.name %></td>
          <td><%= klass.subject %></td>
          <td><%= klass.teachers.first.name %></td>
          <td><%= link_to(current_student_user.average(klass), s_klass_path(klass)) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
